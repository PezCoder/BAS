	
	<% if creating_user %>
	
		<%= f.text_field(:username,{class:'form-control',placeholder:'Username',required:true,title:'Enter a username'}) %>	
		
		<%= f.password_field :password,{class:'form-control',placeholder:'Password',required:true,title:'Enter a password'} %>	
		
	
	<% else %>
	<!-- Options when User is editing its details -->

			<%= f.text_field(:username,class:'form-control',disabled:true) %>	
		
			<%= f.password_field :password,class:'form-control',placeholder:'New Password',required:true,title:'Enter a password' %>	
		

	<% end %>
	
	<%= f.text_field :name ,class:'form-control',placeholder:'Full Name' %>	
	
	<%= f.text_field :city ,class:'form-control',placeholder:'Your City' %>	

	<%= f.text_field :mobile_no,class:'form-control',maxlength:'10',placeholder:'Mobile No' %>	

	<%= f.text_field :email,class:'form-control',placeholder:'Email : example@example.com' %>	

	<%= f.file_field :profile_image %> 
	
