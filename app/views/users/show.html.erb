<div class="users show">

	<h3><%= @user.username.capitalize %>'s Profile </h3>
	<hr>
<div class="row">
	<div class="col-md-4">
			<!-- put user's image here -->
			<%= image_tag @user.profile_image.url(:large) %>
	</div>

	<div class="col-md-6 col-md-offset-1">
		<div class="panel panel-default">
			
			<div class="panel-body">
				<h4>Name</h4>
				<p><%= @user.name %></p>
			
				<h4>City</h4>
				<p><%= @user.city %></p>
			
			
				<h4>Mobile No</h4>
				<p><%= @user.mobile_no %></p>
			
			
				<h4>Email</h4>
				<p><%= @user.email %></p>
				<%= link_to("Edit Profile",{:action=>'edit'},class:'btn btn-primary') %>
				<%= link_to("Delete Profile",{:controller=>'users',:action=>'delete',:id=>@user.id},class:'btn btn-danger') %>

			</div>
		</div>
	</div>
</div>
</div>